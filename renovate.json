{
  "extends": [
    "github>preparingforexams/renovate-config"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "flyway/flyway"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": [
        "flyway/flyway"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "semanticCommitType": "feat!"
    },
    {
      "groupName": "psycopg",
      "matchDepNames": [
        "psycopg",
        "psycopg_pool"
      ]
    }
  ]
}
